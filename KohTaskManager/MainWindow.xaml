<Window x:Class="KohTaskManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Koh's TaskManager" Height="350" Width="525" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <TabControl Margin="10">
            <TabItem Header="Applications">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Processes">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="dataGridProcesses" Margin="10" AutoGeneratingColumn="dataGridProcesses_AutoGeneratingColumn"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
